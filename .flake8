[flake8]
max-line-length = 88
extend-ignore =
    E203,
    E501,
    W503,
    E402,
    F401,
    E128,
    D107,
    D200,
    D212,
    D202,
    D415,
    I100,
    I101,
    I201,
    I202,
    B007

exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    old,
    build,
    dist,
    .venv,
    venv,
    .env,
    vector_db/

per-file-ignores =
    __init__.py:F401,F403
    */migrations/*:E501
    */settings/*:E501

# Docstring conventions
docstring-convention = google

# Import order
import-order-style = google
application-import-names = src
